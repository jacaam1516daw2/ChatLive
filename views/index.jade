extends layout

block content
  #nick-column.column
    label() Nick Name:
    input(type='text', id='add-nick')
    input.btn(id='add-login', type='submit', value='Login')
  #left-column.column
    h3
    br
    h2 Elige tu sala
    ul#channels
      each channel in channels
        li(class='channel-name')
            a.btn(href='#') #{channel}
  #right-column.column
    label(for="new-message") Escribe mensaje:
    textarea#new-message
    input.btn(id='add-new-message', type='submit', value='Enviar')
    h2 Messages
    ul#messages
