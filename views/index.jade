extends layout

block content

  script(src="/javascripts/jquery-1.6.4.min.js")
  script(src="/javascripts/view.index.js")

  #left-column.column
    h2 Elige tu sala
    ul#channels
      each channel in channels
        li(class='channel-name')
          a(href='#') #{channel}

  #right-column.column
    h2 Messages
    ul#messages
    label(for="new-message") Escribe mensaje:
    textarea#new-message
    a(id='add-new-message', href='#') Enviar
